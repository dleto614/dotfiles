configuration {
  font: "JetBrainsMono Nerd Font Medium 10";
  
  drun {
    display-name: "Menu: ";
  }

  run {
    display-name: "Run: ";
  }

  window {
    display-name: "Display: ";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {

  border: 2px;
  margin: 0;
  padding: 0;
  spacing: 0;

  bg: #2E3440;
  bg-alt: #3B4252;
  fg: #81A1C1;
  fg-alt: #EBCB8B;

  background-color: @bg;
  text-color: @fg;
}

window {
  transparency: "real";
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  background-color: @bg-alt;
  children: [prompt, entry];
}

entry {
  background-color: inherit;
  padding: 8px 3px;
}

prompt {
  background-color: inherit;
  padding: 8px;
}

listview {
  lines: 8;
}

element {
  children: [element-icon, element-text];
}

element-icon {
  padding: 8px 8px;
}

element-text {
  padding: 8px 0;
}

element-text selected {
  text-color: @fg-alt;
}
